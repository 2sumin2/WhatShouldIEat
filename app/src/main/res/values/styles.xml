<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--no title bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--status bar color change-->
        <item name="android:statusBarColor">#000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:checkBoxPreferenceStyle">@font/cafe</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/cafe</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <!--no title bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--status bar color change-->
        <item name="android:statusBarColor">#fff</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/background2</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:checkBoxPreferenceStyle">@font/cafe</item>
    </style>
</resources>